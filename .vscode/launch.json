{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-chrome",
      "request": "launch",
      "name": "Launch Chrome against localhost",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node-terminal",
      "name": "Run Script: client start",
      "request": "launch",
      "command": "yarn start",
      "cwd": "${workspaceFolder}\\client"
    }
    ,
    {
      "type": "node-terminal",
      "name": "Run Script: server dev",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}\\server"
    }
  ]
}